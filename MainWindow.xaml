<Window x:Class="RWG.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RWG"
        mc:Ignorable="d"
        Title="RWG" Height="450" Width="800">
    <Grid>
        <!-- Title -->
        <TextBlock Text="Rogue Weight Gain" 
                   FontSize="36" FontWeight="Bold"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   Margin="0,0,0,50" />
        <TextBlock Text="RWG" 
                   FontSize="36" FontWeight="Bold"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   Margin="0,0,0,-50" />
        <!-- Navigation Buttons -->
        <StackPanel Orientation="Horizontal" Width="400" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,30,10,0">
            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Margin" Value="10,0,30,0"/>
                    <Setter Property="Height" Value="50"/>
                    <Setter Property="Width" Value="100"/>
                    <!-- Bottom margin -->
                </Style>
            </StackPanel.Resources>
            <Button Name="BtnCalender" Content="Weekly Program" Click="NavigateToCalender"/>
            <Button x:Name="BtnCreateMeals" Content="Create Meals" Click="NavigateToCreateMeals"/>
            <Button x:Name="BtnMeals" Content="Meals" Click="NavigateToMeals"/>
        </StackPanel>
    </Grid>
</Window>
