<Window x:Class="RWG.Windows.MealFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RWG.Windows"
        mc:Ignorable="d"
        Title="Meal Form"  Height="650" Width="450" MinWidth="400" MinHeight="600">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="*"/>
            <!-- Form content -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <!-- Labels -->
            <ColumnDefinition Width="*"/>
            <!-- Inputs -->
        </Grid.ColumnDefinitions>

        <!-- Form Title -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                   Text="Meal Details"
                   FontSize="24" FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <ScrollViewer Grid.Row="1" Grid.ColumnSpan="2" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Title -->
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Title:" Width="120" VerticalAlignment="Center"/>
                    <TextBox Name="TxtTitle" MinWidth="200"/>
                </StackPanel>

                <!-- Type Tag -->
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Type:" Width="120" VerticalAlignment="Center"/>
                    <ComboBox Name="CmbTypeTag" MinWidth="200" IsEditable="False"/>
                </StackPanel>

                <!-- Can Take to Work -->
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Take to Work:" Width="120" VerticalAlignment="Center"/>
                    <CheckBox Name="ChkCanTakeToWork"/>
                </StackPanel>

                <!-- Nutrition Inputs -->
                <TextBlock Text="Nutrition (g / kcal):" FontWeight="SemiBold" Margin="0,15,0,5"/>
                <StackPanel Orientation="Horizontal">
                    <StackPanel>
                        <TextBlock Text="Calories"/>
                        <TextBox Name="TxtCalories" Width="80" Margin="0,2"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Protein"/>
                        <TextBox Name="TxtProtein" Width="80" Margin="0,2"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Carbs"/>
                        <TextBox Name="TxtCarbs" Width="80" Margin="0,2"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Fat"/>
                        <TextBox Name="TxtFat" Width="80" Margin="0,2"/>
                    </StackPanel>
                </StackPanel>

                <!-- Cook Time & Difficulty -->
                <StackPanel Orientation="Horizontal" Margin="0,15,0,5">
                    <TextBlock Text="Cook Time (min):" Width="120" VerticalAlignment="Center"/>
                    <TextBox Name="TxtCookTime" Width="100"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Difficulty:" Width="120" VerticalAlignment="Center"/>
                    <ComboBox Name="CmbDifficulty" Width="150" IsEditable="False"/>
                </StackPanel>

                <!-- Repeat Interval -->
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Repeat Interval (days):" Width="120" VerticalAlignment="Center"/>
                    <TextBox Name="TxtRepeatInterval" Width="100"/>
                </StackPanel>

                <!-- Notes -->
                <TextBlock Text="Notes / Recipe Steps:" FontWeight="SemiBold" Margin="0,15,0,5"/>
                <TextBox Name="TxtNotes" Height="100" TextWrapping="Wrap"
                         AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>

                <!-- Image Path -->
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Image Path:" Width="120" VerticalAlignment="Center"/>
                    <TextBox Name="TxtImagePath"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2"
                    Orientation="Horizontal" HorizontalAlignment="Right"
                     Margin="0,20,0,0">
            <Button Name="BtnPrimaryAction" Content="Create / Save"
                    Width="120" Height="35"/>
            <Button Name="BtnCancel" Content="Cancel"
                    Width="80" Height="35"/>
        </StackPanel>
    </Grid>
</Window>
