<Window x:Class="RWG.Windows.MealsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RWG.Windows"
        mc:Ignorable="d"
        Title="Meals" Height="450" Width="800">
    <Grid Margin="20">
        <!--Action buttons-->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10">
            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Height" Value="30"/>
                    <Setter Property="Width" Value="100"/>
                    <Setter Property="Margin" Value="0,0,10,0"/>
                </Style>
            </StackPanel.Resources>
            <Button x:Name="BtnCreateMeal" Content="+ New Meal"/>
            <Button x:Name="BtnEditMeal" Content="✎ Edit Meal" />
        </StackPanel>
        <!--Meals List-->
        <ListView x:Name="LvMeals" Margin="0,60,0,0">
            
        </ListView>
    </Grid>
</Window>
